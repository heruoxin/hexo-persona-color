#pagination
  a
    display block
    padding 5px 10px
    background color-border
    color color-font2
    font-family font-title
    text-shadow 0 0 2px #333
    margin-bottom 50px
    &:hover
      background color-font2
      color #fff
      text-decoration none
      text-shadow none

  .prev
    &:before
      content '\f053'
      padding-right 10px
      font-family font-icon

  .next
    &:after
      content '\f054'
      padding-left 10px
      font-family font-icon